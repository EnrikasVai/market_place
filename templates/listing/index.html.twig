{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h2>All Listings</h2>
        <a href="{{ path('listing_new') }}" class="btn btn-primary mb-3">Add Listing</a>
        <ul class="list-group">
            {% for listing in listings %}
                <li class="list-group-item d-flex justify-content-between">
                    <strong>{{ listing.title }}</strong>
                    <span class="text-muted">{{ listing.price }} USD</span>
                </li>
            {% else %}
                <p>No listings available.</p>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
