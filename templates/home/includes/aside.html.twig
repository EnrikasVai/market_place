<div class="aside col-3 d-none d-sm-block">
	<div class="card">
		<div class="card-header d-flex justify-content-between align-items-center">
			<strong>Popular Categories</strong>
		</div>

		{% for category in categories %}
			<div class="card-body p-0">
				<div class="bg-light p-2 d-flex justify-content-between align-items-center border-bottom">
					<strong>{{ category.name }}</strong>
					{% if category.children|length > 0 %}
						<i class="bi bi-chevron-down" data-bs-toggle="collapse" data-bs-target="#category{{ category.id }}"></i>
					{% endif %}
				</div>

				{% if category.children|length > 0 %}
					<ul class="list-group list-group-flush collapse" id="category{{ category.id }}">
						{% for subcategory in category.children %}
							<li class="list-group-item d-flex justify-content-between">
								<a href="{{ path('category_show', {'slug': subcategory.slug}) }}" class="text-decoration-none">
									{{ subcategory.name }}
								</a>
								<span class="text-muted">20</span>
							</li>
						{% endfor %}
						<li class="list-group-item d-flex justify-content-between">
							<a href="{{ path('category_show', {'slug': category.slug}) }}" class="text-primary">Browse All</a>
						</li>
					</ul>
				{% endif %}
			</div>
		{% endfor %}
	</div>
</div>
