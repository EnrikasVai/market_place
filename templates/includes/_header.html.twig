<header class="bg-dark border-bottom sticky-top">
	<nav class="navbar navbar-expand-lg bg-dark border-body container-xxl" data-bs-theme="dark">
		<div class="container-fluid">
			<a class="navbar-brand" href="{{path('app_home')}}">Market.com</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-2 mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link {% if app.request.attributes.get('_route') == 'app_home' %}active{% endif %}" href="{{ path('app_home') }}">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">FAQ</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">SAFETY</a>
					</li>
				</ul>
				<form class="d-flex w-50 me-auto ms-auto" role="search" data-bs-theme="light">
					<input class="form-control rounded-0" type="search" placeholder="What are you looking for?" aria-label="Search">
					<button class="btn btn-primary rounded-0" type="submit">
						<i class="bi bi-search"></i>
					</button>
				</form>
				<ul class="navbar-nav ms-auto me-2 mb-2 mb-lg-0">
					<li class="nav-item me-3">
						{% if app.user %}
							<a class="nav-link" href="{{path('app_dashboard')}}">
								<i class="bi bi-person-circle fs-4"></i>
							</a>
						{% else %}
							<a class="nav-link" href="{{path('app_login')}}">
								<i class="bi bi-person-circle fs-4"></i>
							</a>
						{% endif %}
					</li>
					<li class="nav-item mt-1">
						<a class="nav-link bg-primary rounded-0 text-light" href="{{path('listing_new')}}">List item</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
</header>
